source 'https://rubygems.org'

gem 'rails', '4.2.4'
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'therubyracer', platforms: :ruby


gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 2.0'

# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', '~> 0.4.0', group: :doc

gem 'haml-rails'
gem 'opal-vienna'
gem 'opal-haml'
gem 'opal-rails'
gem 'opal-jquery'

gem "mongoid"

# Authenication / Registration
gem 'devise'
gem 'omniauth'

# Image processing
gem 'mongoid-paperclip' , require: 'mongoid_paperclip'

# Messaging
gem 'bunny'
gem 'sneakers'
gem 'json'

group :development, :test do
  gem "rspec-rails"

  gem 'pry'
  gem 'pry-byebug'
  gem 'pry-doc'
  gem 'pry-remote'
  gem 'pry-rescue'
  gem 'pry-stack_explorer'
end

group :development do
  # Access an IRB console on exception pages or by using <%= console %> in views
  gem 'web-console', '~> 2.0'

  gem 'semver'
  gem 'guard-rspec'
  gem 'guard-rails', require: false

  gem 'spring'
end

